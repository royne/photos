<div class="container">
  <div class="row justify-content-center">
    <div class="col-xs-8 col-sm-6 card card-shadow">
      <p><%= link_to '<i class="material-icons">reply_all</i> Volver'.html_safe, root_path %></p>
      <h1>Nueva Evidencia</h1>
      <%= form_for @photo do |f|%>
        <div class="form-group">
          <%= f.text_field :title, placeholder: "Ingresa el titulo de la actividad", class: "form-control"%>
        </div>

        <div class="form-group">
          <%= f.label "la foto no puede ser mayor a 1MB." %>
          <%= f.file_field :image %>
        </div>

        <div class="form-group">
          <%= link_to "si supero este tamaÃ±o redimencionala aqui", "http://webresizer.com/resizer/", target:"_blank", class:"font-italic" %>
        </div>

        <div class="form-group">
          <%= f.collection_select :course_id, Course.all, :id, :name %>
        </div>

        <div class="form-group">
          <%= f.submit "Publicar", class: "btn btn-dark btn-block btn-color"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
