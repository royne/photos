<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-4">
      <h1>Nueva Evidencia</h1>
      <%= form_for @photo do |f|%>
        <div class="form-group">
          <%= f.text_field :title, placeholder: "Ingresa el titulo de la actividad", class: "form-control"%>
        </div>

        <div class="form-group">
          <%= f.file_field :image %>
        </div>

        <div class="form-group">
          <%= f.collection_select :course_id, Course.all, :id, :name %>
        </div>

        <div class="form-group">
          <%= f.submit "Publicar", class: "btn btn-primary btn-block"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
