<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-4">
      <h2>Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.email_field :email, autofocus: true, placeholder:"Email", autocomplete: "email", class:"form-control" %>
      </div>

      <div class="form-group">
        <%= f.text_field :name, autofocus: true, placeholder:"Nombre", class:"form-control" %>
      </div>

      <div class="form-group">
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> caracteres minimo)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", placeholder:"Contraseña", class:"form-control" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder:"Confirma la Contraseña", class:"form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit "Sign up", class: "btn btn-dark btn-color btn-block" %>
      </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
